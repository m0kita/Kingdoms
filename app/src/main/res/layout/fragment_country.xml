<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.country.CountryFragment">

    <ImageView
        android:id="@+id/ivCountryFlag"
        android:layout_width="0dp"
        android:layout_height="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/flag_of_the_taliban"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ivCountryFlag"
        app:layout_constraintStart_toStartOf="@id/ivCountryFlag"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:id="@+id/tvCapital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/capital"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/region"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/tvCapital"
        app:layout_constraintTop_toBottomOf="@id/tvCapital"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/currency"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/tvRegion"
        app:layout_constraintTop_toBottomOf="@id/tvRegion"/>

    <TextView
        android:id="@+id/tvTimezones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timezones"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/tvCurrency"
        app:layout_constraintTop_toBottomOf="@id/tvCurrency"/>
</androidx.constraintlayout.widget.ConstraintLayout>